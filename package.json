{
  "name": "assistify-daily",
  "version": "0.1.2",
  "description": "A simple team diary",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://diary.assistify.de",
  "main": "index.js",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-runtime"
    ]
  },
  "scripts": {
    "start": "PORT=4000 node scripts/start.js",
    "build": "node scripts/build.js",
    "lint": "eslint ./src",
    "lint-all": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "node scripts/test.js --env=jsdom",
    "coverage": "node scripts/test.js --env=jsdom --coverage",
    "ui-test": "testcafe chrome:headless test/scripts/*.test.js --app 'npm run start' --app-init-delay 10000",
    "ui-test-live": "testcafe-live chrome test/scripts/*.test.js --app 'npm run start' --app-init-delay 10000",
    "release": "NON_INTERACTIVE=true release-it",
    "predeploy": "PUBLIC_URL=https://assistify.github.io/diary npm run build",
    "deploy": "gh-pages -d build -m '[ci skip] Deployed via CI'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/client/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/client/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "release-it": {
    "scripts": {
      "beforeStart": "npm test",
      "afterRelease": "echo Successfully released ${name} version ${version} to ${repo.repository}."
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "copy-to-clipboard": "^3.0.8",
    "dateformat": "^3.0.3",
    "history": "^4.7.2",
    "html2canvas": "^1.0.0-alpha.12",
    "jsoneditor": "^5.26.2",
    "jsoneditor-react": "^1.0.0",
    "lodash": "^4.17.11",
    "lz-string": "^1.4.4",
    "markdown-it": "^8.4.2",
    "markdown-it-emoji": "^1.4.0",
    "meteor-node-stubs": "^0.4.1",
    "parse-link-header": "^1.0.1",
    "prop-types": "^15.6.2",
    "qs": "^6.6.0",
    "react": "^16.5.2",
    "react-bulma-components": "^2.3.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.5.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "clipboard-polyfill": "^2.7.0",
    "css-loader": "^1.0.1",
    "dotenv": "^6.1.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-loader": "1.7.1",
    "eslint-plugin-flowtype": "2.33.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.5.0",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "fs-extra": "3.0.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.0.0",
    "postcss-loader": "^3.0.0",
    "promise": "7.1.1",
    "react-dev-utils": "^3.0.0",
    "react-error-overlay": "^1.0.7",
    "react-test-renderer": "^16.6.3",
    "regenerator-runtime": "^0.13.1",
    "release-it": "^10.0.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "svg-url-loader": "^2.3.2",
    "sw-precache-webpack-plugin": "0.9.1",
    "testcafe": "^0.23.2",
    "testcafe-live": "^0.1.4",
    "url-loader": "0.5.8",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.14",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-manifest-plugin": "1.1.0"
  }
}
